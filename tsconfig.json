{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "routes/**/*.ts",
    "controllers/**/*.ts",
    "models/**/*.ts",
    "utils/**/*.ts",
    "database/**/*.ts",
    "middleware/**/*.ts"
  ]
}
